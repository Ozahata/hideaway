{
  "compilerOptions": {
    "target": "es5",
    "module": "es2015",
    "moduleResolution": "node",
    "declaration": true,
    "preserveConstEnums": true,
    "allowJs": true,
    "checkJs": true,
    "outDir": "./dist",
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "esModuleInterop": true,
    "declarationMap": true,
    "isolatedModules": true,
    "downlevelIteration": true,
    "lib": ["ES2015", "DOM"]
  },
  "include": ["src"],
  "exclude": ["node_modules"]
}
